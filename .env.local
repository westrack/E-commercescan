# E-commerce Analyzer Environment Variables - XAMPP Configuration

# Frontend Configuration
VITE_APP_NAME="E-commerce Analyzer"
VITE_APP_VERSION="1.0.0"

# Backend Configuration - XAMPP Specific
VITE_BACKEND_URL="http://localhost"
VITE_API_ENDPOINT="/project/backend/process.php"

# XAMPP Settings
VITE_XAMPP_PATH="C:\\xampp\\htdocs\\project\\backend"
VITE_APACHE_PORT=80

# Development Settings
VITE_DEV_MODE=true
VITE_DEBUG_LOGS=true

# Demo Data Settings
VITE_LOAD_DEMO_DATA=true
VITE_DEMO_RESULTS_COUNT=300

# Analysis Settings
VITE_MAX_RETRIES=3
VITE_TIMEOUT_SECONDS=30

# UI Settings - Fixed Dimensions
VITE_DEFAULT_LANGUAGE="ar"
VITE_DEFAULT_THEME="dark"
VITE_MODAL_WIDTH=1155
VITE_MODAL_HEIGHT=825

# Smart Categorization
VITE_AUTO_CATEGORIZE=true
VITE_HQ_THRESHOLD="CAP:NO+CF:NO"
VITE_HW_THRESHOLD="CAP:YES|CF:YES"

# Backend URLs (in order of preference)
VITE_BACKEND_URLS="http://localhost/project/backend/process.php,http://localhost:80/project/backend/process.php,http://127.0.0.1/project/backend/process.php,http://127.0.0.1:80/project/backend/process.php"